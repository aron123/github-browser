<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">
    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/user_search_profile_pic"
        android:layout_width="@dimen/nav_profile_pic_width"
        android:layout_height="@dimen/nav_profile_pic_height"
        app:srcCompat="@drawable/ic_profile" />

    <TextView
        android:id="@+id/user_search_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/user_search_profile_pic"
        android:text="@string/default_username"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="16sp"/>

</RelativeLayout>